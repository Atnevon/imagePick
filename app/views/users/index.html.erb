<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<%= @some_text %>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Contact</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'User Info', user, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit User', edit_user_path(user), class:"btn btn-warning" %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:"btn btn-success" %>